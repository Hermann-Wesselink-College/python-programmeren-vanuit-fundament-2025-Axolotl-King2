from random import randint

getalmin = int(input('welk getal is het laagste? '))
getalmax = int(input('welk getal is het hoogste? '))
computerGetal = randint((1+getalmin-1),(1+getalmax-1))
gameover = False
teller = int(input('hoe veel pogingen will je het in proberen? '))
pogingen = teller

while not gameover:
     gebruikerGetal = int(input('Raad een getal tussen de '+ str(getalmin)+  ' en de '+ str(getalmax)+' in '+str(teller)+' pogingen. '))
     if pogingen > 0:
        if computerGetal < gebruikerGetal:
            print("Het getal van de computer is kleiner!")
            pogingen -= 1
            print('nog '+str(pogingen)+' pogingen over.')
        elif computerGetal > gebruikerGetal:
            print("Het getal van de computer is groter!")
            pogingen -= 1
            print('nog '+str(pogingen)+' pogingen over.')
        else:
            print("Je hebt het geraden!")
            gameover = True
            pogingen -= 1
            print('Je hebt het in '+ str(teller-pogingen) +' keer geraden uit de '+str(teller)+' pogingen.')
            break
     if pogingen == 0:
        print('Game over.')
        print('Het getal was: '+str(computerGetal))
        break